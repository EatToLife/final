<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="今天吃啥？"
        android:textColor="#000000"
        android:textSize="29sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还可以吃 = 预算 - 饮食 + 运动"
        android:textColor="#000000"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCalorieBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999KJ"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textViewCalorieNeeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      10000"
            android:textColor="#000000"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      -"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textViewCaloriesConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      饮食"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      +"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textViewCaloriesBurned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      运动"
            android:textColor="#000000"
            android:textSize="19sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="饮食推荐"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="早安！建议早餐热量"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="calorie"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/breakfast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="早餐"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="午餐"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="晚餐"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加餐"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热量摄入"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/foodRecordQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="饮食记录"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/foodKLLQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="食物卡路里表"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/addDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="晚餐"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/addExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="加餐"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="运动"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="须消耗热量"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="KJ"
                android:textColor="#000000"
                android:textSize="19sp" />
        </LinearLayout>

        <Button
            android:id="@+id/YunDongKLLBQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="运动卡路里表"
            android:textColor="#000000"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KJ"
                android:textColor="#000000"
                android:textSize="19sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="身高"
                android:textColor="#000000"
                android:textSize="19sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jianKangDA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="健康档案"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/jianKangTJ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="健康统计图"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>