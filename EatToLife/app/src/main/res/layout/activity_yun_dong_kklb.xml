<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".basic.YunDongKLLB">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/ChaXunYD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/chaxunbj"
            android:hint="请输入运动名称"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/bt_ChaXunYD"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="查询"
            android:src="@drawable/bt_chaxun"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <ListView
        android:id="@+id/YunDongKLLB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


</LinearLayout>