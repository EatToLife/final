<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.`android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".JianKangDA">

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/me"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/girl"
                android:contentDescription="@string/image_button_description"/>

            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="基本信息"
                android:textSize="30sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:columnCount="4"
                android:rowCount="3"
                android:background="@drawable/et_bg">

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="年龄"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:text="性别"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit2"
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:text="身高"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:text="体重"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tv_foodLike"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="喜欢的食物"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:id="@+id/tv_sportLike"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="喜欢的运动"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/iv_edit6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit"/>
            </GridLayout>

            <ListView
                android:id="@+id/lv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/BMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="5dp"
                android:layout_marginTop="45dp"
                android:text="当前BMI："
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tzl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="5dp"
                android:layout_marginTop="45dp"
                android:text="当前体脂率："
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>